{
  "name": "Custom CSS",
  "author": "J.Karikan",
  "description": "Use Monaco editor in custom css",

  "selector": ".*(\\/wp-admin\\/)(customize\\.php|post\\.php|post\\-new\\.php).*",
  "onLoad": true,
  "enabled": true,

  "code": {
    "js": "js/file.js",
    "css": "css/file.css",
    "html": "html/file.html",
    "files": [
      "https://cdn.jsdelivr.net/npm/monaco-editor/min/vs/loader.js"
    ]
  }
}